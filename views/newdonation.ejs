
<% include partials/header %>
<head>
    <style media="screen">
        body {
          height: 100%;
        }

        body {
          display: -ms-flexbox;

          -ms-flex-align: center;
          align-items: center;

          padding-bottom: 40px;
          background-color: #f5f5f5;
        }
        #landing {
            width: 100%;
            max-width: 340px;
            padding: 15px;
            margin: auto;
        }
        .form-signin {
          width: 100%;
          max-width: 340px;
          padding: 15px;
          margin: auto;
        }

        #header {
            max-width: 480px
        }
        .form-signin .checkbox {
          font-weight: 400;
        }
        .form-signin .form-control {
          position: relative;

          height: auto;
          padding: 10px;
          font-size: 16px;
        }
        .form-signin .form-control:focus {
          z-index: 2;
        }

        #dropdown {
            margin-bottom: 30px;
        }
        .form-signin input[id="inputLastName"] {
          margin-bottom: -1px;
          margin-top: 5px;
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
        .form-signin input[type="email"] {
          margin-bottom: -1px;
          margin-top: 5px;
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
        .form-signin input[type="password"] {
          margin-bottom: 5px;
          margin-top: 5px;
          border-top-left-radius: 0;
          border-top-right-radius: 0;
        }
        .form-signin input[type="confirmPassword"] {
          margin-bottom: 5px;
          margin-top: 5px;
          border-top-left-radius: 0;
          border-top-right-radius: 0;
        }

    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Donation Tracker ft. Scrumbucket</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>

    </head>
    <link href="css/signin.css" rel="stylesheet">
    </head>
    <!-- Custom styles for this template -->

 <body class="text-center">


    <form class="form-signin" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Add an item:</h1>
      <input type="text" name="inputName" class="form-control" placeholder="Item name" required autofocus>
      <input type="number" name="inputValue" class="form-control" placeholder="Monetary Value" required>
      <input type="text" name="inputShort" class="form-control" placeholder="Short Description" required autofocus>
      <input type="textarea" name="inputLong" class="form-control" placeholder="Long Description">
      <div class="checkbox mb-3">
      <div>
      <select class="form-control form-control-md" name="typedropdown">
        <option disabled selected>Category</option>
        <option>Appliances</option>
        <option>Baby</option>
        <option>Bags and Accessories</option>
        <option>Books and Music</option>
        <option>Clothing</option>
        <option>Electronics</option>
        <option>Food</option>
        <option>Furniture</option>
        <option>Movies and Games</option>
        <option>Sports and Outdoors</option>
        <option>Toys</option>
      </select>
    </div>
  </div>

      <input type="textarea" name="inputComment" class="form-control" placeholder="Comments">
      <div class="checkbox mb-3">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Add Donation</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2018-2019</p>

    </form>

</body>
